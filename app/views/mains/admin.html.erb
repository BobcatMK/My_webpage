<%= stylesheet_link_tag "main_css/admin" %>
<% content_for(:title, "Administrator") %>
<br>
<p>Web development, list of all posts</p>
<%= link_to "Create new post", create_post_path %>
<br />
<br />
<% @all_posts_webdevelopment.each do |post| %>
	<table class="database_post">
		<tr>
			<td class="id"><%= p "id: #{post.id}" %></td>
			<td class="name"><%= post.title %></td>
		</tr>
		<tr>
			<td colspan="3" class="body">
				<%= p "Short_description:" %>
				<%= post.short %>
			</td>
		</tr>
		<tr>
			<td colspan="3" class="body">
				<%= p "Content:" %>
				<%= post.body %>
			</td>
		</tr>
		<tr>
			<td colspan="3">
				<%= p "Date:" %>
				<%= post.date %>
			</td>
		</tr>
	</table>
	
<% end %>

