<%= form_for(@main,:url => url_for(:controller => "mains", :action => "create")) do |mai| %>

	<%= mai.hidden_field :parent_id %>
	
	<%= mai.hidden_field :post_id %>
	
	<%= mai.hidden_field :post_motivation_id %>

	<div>
		<%= mai.label :title %>
		<%= mai.text_field :title %>
	</div>
	<div>
		<%= mai.label :body %>
		<%= mai.text_area :body %>
	</div>
	<div>
		<%= mai.submit "Submit" %>
	</div>

<% end %>

<%= p @main.inspect %>

<% if @main.errors.any? %>
		<div>
			<% @main.errors.full_messages.each do |msg| %>
				<p><%= msg %></p>
			<% end %>
		</div>
<% end %>
