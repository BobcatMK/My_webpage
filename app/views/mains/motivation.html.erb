<%= stylesheet_link_tag "main_css/motivation" %>
<% content_for(:title, "MK Motivation") %>

<% @sort_rev.each do |asdf| %>
	<%= link_to(motivation_showpost_path(asdf.id)) do %>
		<div class="post">
			<div class="post_title" >> <%= asdf.title.upcase %></div>
			<div class="date">Release date: <%= asdf.date %></div>
			<br />
			<div class="short_desc">
				<%= asdf.short %>
			</div>
		</div>
	<% end %>
	<div class="hr">- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -</div>
	<br />
<% end %>