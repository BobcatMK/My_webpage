<%= stylesheet_link_tag "main_css/admin" %>
<% content_for(:title, "Administrator") %>

<p>All comments in Web development and Motivation category:</p>
<% @all_comments.each do |komentarz| %>
	<table class="database_post">
		<tr>
			<td class="id"><%= p "id: #{komentarz.id}" %></td>
			<td class="name"><%= komentarz.name %></td>
			<td class="parent">
				<% if komentarz.parent_id == nil %>
					<%= p "parent_id: root" %>
				<% else %>
					<%= p "parent_id: #{komentarz.parent_id}" %>
				<% end %>
			</td>
		</tr>
		<tr>
			<td colspan="3" class="body">
				<%= p "Content:" %>
				<%= komentarz.content %>
			</td>
		</tr>
		<tr>
			<td colspan="3"><%= link_to "Delete", main_path(komentarz),method: :delete, data: { confirm: "Are you sure?" }  %></td>
		</tr>
		<tr>
			<td colspan="3"><%= link_to "Edit", edit_main_path(komentarz) %></td>
		</tr>
	</table>
<% end %>