<table class="table">
	<tbody>
		<tr>
			<td rowspan="1" style="width: 100px;" ><%= image_tag(main.image_url, :alt => "Guest picture")%></td>
			<td><%= main.title %><br/><%= l(main.created_at, format: '%d %B %Y, %H:%M:%S')%></td>
		</tr>
		<tr>
			<td colspan="2" style="padding-left: 10px; padding-right: 10px; width: 500px; word-wrap: break-word;"><%= main.body %></td>
		</tr>
		<tr>
			<td colspan="3">
				<% from_reply_form ||= nil %>
				<% unless from_reply_form %>
					<% if main.leaf? %>
						<small>There are no replies yet - be the first to reply!</small>
					<% end %>
					<p><%= link_to "Reply", new_main_path(main.id) %></p>
				<% end %>
			</td>
		</tr>
	</tbody>
</table>


