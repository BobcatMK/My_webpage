<%= stylesheet_link_tag "main_css/webdev" %>
<% content_for(:title, "MK Web development") %>

<% @sort_reverse.each do |asdf| %>
	<%= link_to(learn_showpost_path(asdf.id)) do %>
		<div class="post">
			<div class="post_title" > <%= simple_format(asdf.title.upcase,{},{:wrapper_tag => "div"}) %></div>
			<div class="date">Release date: <%= asdf.date %></div>
			<div class="short_desc">
				<%= simple_format(asdf.short,{},{wrapper_tag: "div"}) %>
			</div>
		</div>
	<% end %>
	<div class="hr">- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -</div>
	<br />
<% end %>

