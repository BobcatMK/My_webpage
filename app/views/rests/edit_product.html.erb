<% content_for(:title,"Editing product") %>

<%= form_for(@edit_product,:url => edit_final_product_path(@edit_product.id)) do |f| %>
	
	<%= f.hidden_field :id %>
	
	<div>
		<%= f.label :name %>
		<%= f.text_field :name %>
	</div>
	<div>
		<%= f.label :author %>
		<%= f.text_field :author %>
	</div>
	<div>
		<%= f.label :short_description %>
		<%= f.text_area :short_description %>
	</div>
	<div>
		<%= f.label :long_description %>
		<%= f.text_area :long_description %>
	</div>
	<div>
		<%= f.label :price %>
		<%= f.text_field :price %>
	</div>
	<div>
		<%= f.label :affiliate_link %>
		<%= f.text_field :affiliate_link %>
	</div>
	<div>
		<%= f.label :picture1 %>
		<%= f.text_field :picture1 %>
	</div>
	<div>
		<%= f.label :picture2 %>
		<%= f.text_field :picture2 %>
	</div>
	<div>
		<%= f.label :picture3 %>
		<%= f.text_field :picture3 %>
	</div>
	<div>
		<%= f.label :picture4 %>
		<%= f.text_field :picture4 %>
	</div>
	<div>
		<%= f.submit("Submit",data: {confirm: "Are you sure?"}) %>
	</div>
<% end %>

